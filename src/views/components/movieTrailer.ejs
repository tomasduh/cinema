<% const youtubeUrl = 'https://www.youtube.com/embed/' %>
<div class="container-trailer">
    <div class="video-trailer">
        <iframe src="<%= youtubeUrl + detalle.video_key %>" title="Trailer" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen>
        </iframe>
    </div>
</div>

<script>
    const contDiv = document.querySelector('.container-trailer');
    setTimeout(() => {
        contDiv.style.display = 'block'
    }, 300)
</script>